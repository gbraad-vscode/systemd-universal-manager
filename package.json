{
  "name": "systemd-universal-manager",
  "author": {
    "name": "Gerard Braad",
    "email": "me@gbraad.nl"
  },
  "publisher": "gbraad",
  "repository": {
      "type": "git",
      "url": "https://github.com/gbraad-vscode/systemd-universal-manager"
  },
  "license": "MIT",
  "displayName": "Systemd Universal Manager",
  "description": "Manage systemd from within VS Code",
  "icon": "img/icon.png",
  "version": "0.3.0",
  "engines": {
      "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:systemdServiceExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "systemd-explorer",
          "title": "Systemd Services",
          "icon": "img/icon.svg"
        }
      ]
    },
    "views": {
      "systemd-explorer": [
        {
          "id": "systemdServiceExplorer",
          "name": "Services"
        }
      ]
    },
    "commands": [
      {
        "command": "systemd-manager.refreshServices",
        "title": "Refresh Services",
        "icon": "$(refresh)",
        "category": "Systemd"
      },
      {
        "command": "systemd-manager.startService",
        "title": "Start Service",
        "icon": "$(play)",
        "category": "Systemd"
      },
      {
        "command": "systemd-manager.stopService",
        "title": "Stop Service",
        "icon": "$(debug-stop)",
        "category": "Systemd"
      },
      {
        "command": "systemd-manager.restartService",
        "title": "Restart Service",
        "icon": "$(debug-restart)",
        "category": "Systemd"
      },
      {
        "command": "systemd-manager.viewServiceStatus",
        "title": "View Service Status",
        "icon": "$(open-preview)",
        "category": "Systemd"
      },
      {
        "command": "systemd-manager.groupByStatus",
        "title": "Group by Status",
        "icon": "$(list-tree)",
        "category": "Systemd"
      },
      {
        "command": "systemd-manager.showAllServices",
        "title": "Show All Services",
        "icon": "$(list-flat)",
        "category": "Systemd"
      },
      {
        "command": "systemd-manager.filterServices",
        "title": "Filter Services",
        "icon": "$(filter)",
        "category": "Systemd"
      },
      {
        "command": "systemd-manager.clearFilter",
        "title": "Clear Filter",
        "icon": "$(clear-all)",
        "category": "Systemd"
      },
      {
        "command": "systemd-manager.toggleServiceMode",
        "title": "Toggle between System and User Services",
        "icon": "$(sync)",
        "category": "Systemd"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "systemd-manager.refreshServices",
          "when": "view == systemdServiceExplorer",
          "group": "navigation"
        },
        {
          "command": "systemd-manager.filterServices",
          "when": "view == systemdServiceExplorer",
          "group": "navigation"
        },
        {
          "command": "systemd-manager.clearFilter",
          "when": "view == systemdServiceExplorer",
          "group": "navigation"
        },
        {
          "command": "systemd-manager.groupByStatus",
          "when": "view == systemdServiceExplorer",
          "group": "2_grouping@1"
        },
        {
          "command": "systemd-manager.showAllServices",
          "when": "view == systemdServiceExplorer",
          "group": "2_grouping@2"
        }
      ],
      "view/item/context": [
        {
          "command": "systemd-manager.startService",
          "when": "view == systemdServiceExplorer && viewItem == inactiveService",
          "group": "inline"
        },
        {
          "command": "systemd-manager.stopService",
          "when": "view == systemdServiceExplorer && viewItem == activeService",
          "group": "inline"
        },
        {
          "command": "systemd-manager.restartService",
          "when": "view == systemdServiceExplorer && viewItem == activeService",
          "group": "inline"
        },
        {
          "command": "systemd-manager.viewServiceStatus",
          "when": "view == systemdServiceExplorer && (viewItem == activeService || viewItem == inactiveService)",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "mocha": "^8.4.0",
    "vscode-test": "^1.5.2",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
